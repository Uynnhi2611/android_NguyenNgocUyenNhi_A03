<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Define colorPrimary and colorPrimaryVariant as attributes -->
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryVariant">@color/main_bg</item>
        <!-- Use the attributes -->
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.QuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuizApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QuizApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryVariant">@color/main_bg</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>